<%= form_for @fine do |f|%>
    <div class="form-style-6">
      <h1>Crete Fine</h1>
      <%= label_tag :order, 'Order: '%>
      <%= content_tag(:span, ("#{@order.client} - #{@order.car}"), :id => 'order') %><br><br>
      <%= f.label :reason, 'Reason:' %>
      <%= f.text_area :reason %><br>
      <%= f.label :cost, 'Cost:' %>
      <%= f.text_field :cost %><br>
      <%= f.submit 'Submmit' %>
    </div>
<% end %>
