

<%= content_tag(:div, '', :id => "test_div" ) %>
<% if @orders.empty? %>
    <%= content_tag(:p, "There are no such orders") %>
<% else %>
    <table class="orders">
      <caption>Orders</caption>
      <thead>
      <tr>
        <th>Client</th>
        <th>Car</th>
        <th>Rent Time</th>
        <th>Cost</th>
        <th>Status</th>
        <th>Admin</th>
        <th>Comment</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>

      <% @orders.each do |order| %>
          <tr data-order-id="<%= order.id%>">
            <td>
              <%= content_tag(:span, order.client) %>
            </td>
            <td>
              <%= content_tag(:span, link_to(order.car, order_path(order))) %>
            </td>
            <td>
              <%= content_tag(:span, order.rent_time) %>
            </td>
            <td>
              <%= content_tag(:span, order.rent_time * order.car.price) + '$' %>
            </td>
            <td>
              <%= content_tag(:span, order.status) %>
            </td>
            <td>
              <%= content_tag(:span, order.admin) %>
            </td>
            <td>
              <%= content_tag(:span, order.comment)%>
            </td>
              <td>
                <% if @user.admin?%>
                    <% unless @completed_orders.include? order.status %>
                        <%= content_tag(:span, link_to('Change order', edit_order_path(order))) %>
                        <%= content_tag(:span, link_to('Create fine', new_fine_path(order))) %>
                    <% end %>
                <% else %>
                    <% if @active_orders.include? order.status %>
                        <%= content_tag(:div, button_to("Return Car", return_car_order_path(order.id), {:class => 'return_car', :remote => true, :method => :put})) %>
                    <% end %>
                <% end %>
                <% unless Fine.where(order: order).empty? %>
                  <%= content_tag(:span, link_to('Fines', fines_path(order))) %>
                <% end %>
              </td>
          </tr>
      <% end %>

      </tbody>
      <tfoot>
      <tr>
        <th colspan="3">Grand Total</th>
        <th><%= "#{@total_prices}$" %></th>
      </tr>
      </tfoot>
    </table>
<% end %>
